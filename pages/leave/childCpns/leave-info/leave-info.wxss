.title {
  margin: 40rpx 0;
  font-weight: 700;
  font-size: 46rpx;
  text-align: center;
}
.item {
  border-top: 1px solid #317EDB;
  line-height: 100rpx;
}
.left {
  display: inline-block;
  width: 220rpx;
  padding-right: 20rpx;
  border-right: 1px solid #317EDB;
  background-color: #DDECFF;
  text-align: right;
}
.right {
  display: inline-block;
  margin-left: 20rpx;
}
.item input,
.item textarea {
  display: inline-block;
  margin-bottom: -10rpx;
  border: 1rpx solid dodgerblue;
}
.day {
  width: 50rpx;
}
.fz {
  font-size: 32rpx;
}
.wh {
  height: 244rpx;
  line-height: 244rpx;
}
.item textarea {
  width: 440rpx;
  height: 200rpx;
  margin-top: 17rpx;
  margin-bottom: -86rpx;
  line-height: 0;
}
.item:last-of-type {
  border-bottom: 1px solid #317EDB;
}
.btn {
  margin: 20rpx 0;
  color: white;
  background-color: dodgerblue;
}
.pic {
  color: #317EDB;
}